<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node.JS Basic</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

</head>
<body>
    
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/upload" class="active">Upload</a>
    </div>
      
    <div class="upload-file-container">
        <form action="/upload-profile-pic" enctype="multipart/form-data" method="POST">
            <div>
                <label>Avatar:</label>
                <input type="file" name="profile_pic"/>        
            </div>
            <div>
                <button type="submit">Save File</button>
            </div>
        </form>

        <form action="/upload-profile-pic" enctype="multipart/form-data" method="POST">
            <div>
                <label>Select multiple file</label>
                <input type="file" name="profile_pic" multiple/>        
            </div>
            <div>
                <button type="submit">Save File</button>
            </div>
        </form>
    </div>

    
</body>
</html>